<Page
    x:Class="Pexeso.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pexeso"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="Red" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Pivot x:Name="MainPivot" SelectedIndex="1" RequestedTheme="Dark">
            <PivotItem Header="Game">
                 
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid x:Name="Outer" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2"  Height="700" Width="700">
              
                    </Grid>
                    
                    
                    <!-- Button needs to be placed after the grid otherwise the grid blocks it-->
                    <Button Grid.Column="0" Grid.Row="0" x:Name="NewGame" Content="New Game" 
                            RequestedTheme="Dark" 
                            HorizontalAlignment="left" VerticalAlignment="Center" Margin="30,0,0,0"
                            Click="NewGame_Click"/>

                    <StackPanel Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,0,0,0">
                        <TextBlock x:Name="HighScore" FontSize="22" Foreground="Aqua">
                            High Score: 0
                        </TextBlock>
                        <TextBlock x:Name="CurrentScore" FontSize="22" Foreground="Aqua">
                            Current Score: 0
                        </TextBlock>
                        <TextBlock Margin="0,100,0,0" Visibility="Collapsed" x:Name="GameOver" FontSize="22" Foreground="Aqua">
                            You Won!
                        </TextBlock>
                    </StackPanel>

   
                </Grid>
    
            </PivotItem>

            <PivotItem Header="Grid Size">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <Button Click="FourByFour_OnClick">4 X 4</Button>
                    <Button Click="SixBySix_OnClick">6 X 6</Button>
                    <Button Click="EightByEight_OnClick">8 X 8</Button>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="Game History">

                <ListView x:Name="ListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0">Game Number:</TextBlock>
                                    <TextBlock Text="{Binding GameNumber}">
                                    </TextBlock>
                            </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0">Score:</TextBlock>
                                    <TextBlock Text="{Binding Score}"></TextBlock>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0">Date:</TextBlock>
                                    <TextBlock Text="{Binding Date}"></TextBlock>
                                    
                                </StackPanel>
                                
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </PivotItem>
   
        </Pivot>
   
    </Grid>
</Page>
